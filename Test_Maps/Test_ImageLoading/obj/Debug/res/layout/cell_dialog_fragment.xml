<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:clipToPadding="false"
    android:background="@android:color/white">
    <TextView
        android:id="@+id/choice_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:background="@android:color/white"
        android:text="KEUZE" />
</LinearLayout>

           <Bazookas.Kinepolis.Views.CustomButton.View_Button_Overlay_Oval
                android:id="@+id/tutorial_complete_button"
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:layout_margin="20dp"
                android:layout_weight="10"
                android:layout_below="@id/tutorial_scrollview"
                android:layout_gravity="center"
                android:background="@drawable/tutorial_button_bg">
                <TextView
                    android:id="@+id/tutorial_done_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Done"
                    android:textColor="@color/font_white"
                    android:gravity="center"
                    android:typeface="serif"
                    android:textSize="@dimen/font_movieDetail_genreTag" />
            </Bazookas.Kinepolis.Views.CustomButton.View_Button_Overlay_Oval>